<div style="max-width: 900px; margin: 0 auto; background: #fff; border-radius: 20px; box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1); padding: 3rem; margin-bottom: 4rem;">
  <%= form_with url: '#', method: 'get', class: 'space-y-8' do %>
    <div>
      <%= label_tag :room, 'Choose a room', class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <%= select_tag :room, options_for_select(['Room A', 'Room B', 'Room C', 'Room D']),
        class: 'w-full border border-gray-300 rounded-lg shadow-sm py-3 px-4 bg-white focus:outline-none focus:ring-2 focus:ring-amber-500' %>
    </div>

    <div>
      <%= label_tag :date, 'Select Date', class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <%= date_field_tag :date, Date.today,
        class: 'w-full border border-gray-300 rounded-lg shadow-sm py-3 px-4 bg-white focus:outline-none focus:ring-2 focus:ring-amber-500' %>
    </div>

    <div>
      <%= label_tag :time, 'Select Time', class: 'block text-sm font-medium text-gray-700 mb-2' %>
      <%= time_select :time, Time.now, { minute_step: 15 },
        { class: 'w-full border border-gray-300 rounded-lg shadow-sm py-3 px-4 bg-white focus:outline-none focus:ring-2 focus:ring-amber-500' } %>
    </div>

    <div>
      <%= submit_tag 'Reserve Room',
        class: 'w-full bg-amber-600 hover:bg-amber-700 text-white font-medium py-3 px-6 rounded-lg shadow-md transition-all' %>
    </div>
  <% end %>
</div>

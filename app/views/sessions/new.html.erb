<h1 class="text-2xl font-semibold text-center my-4">Login</h1>

<%= form_with(url: login_path, method: :post, class: 'max-w-md mx-auto p-4 border rounded-lg') do |form| %>
  <div class="mb-4">
    <%= form.label :email, class: 'block text-sm font-medium text-gray-700' %>
    <%= form.text_field :email, required: true, class: 'w-full p-2 border rounded-md' %>
  </div>

  <div class="mb-4">
    <%= form.label :password, class: 'block text-sm font-medium text-gray-700' %>
    <%= form.password_field :password, required: true, class: 'w-full p-2 border rounded-md' %>
  </div>

  <div class="flex items-center justify-between">
    <%= form.submit 'Login', class: 'px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700' %>
  </div>
<% end %>

<%= link_to 'Forgot password?', '#', class: 'text-sm text-blue-600 hover:text-blue-700 mt-2 block text-center' %>

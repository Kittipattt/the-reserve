<%= stylesheet_link_tag 'dashboard', media: 'all' %>

<div class="room-cards-container">
  <div class="w-full flex justify-center">
    <img src="https://img5.pic.in.th/file/secure-sv1/rooms.png" alt="bluePrint" class="max-w-full h-auto rounded-2xl shadow-lg" />
  </div>
  
  <!-- Upcoming Reservations (Left Side) -->
  <div class="w-full lg:w-1/3">
    <div class="upcoming-reservations" id="upcoming-reservations">
      <%= render 'dashboard/upcoming', reservations: @upcoming_reservations %>
    </div>
  </div>
  <div class="w-full lg:w-2/3">
    <div class="bg-gradient-to-r from-[#2C3E50] to-[#8E44AD] p-12 rounded-3xl shadow-2xl">
      <div class="room-cards-container">
        <% if @rooms.present? %>
          <% @rooms.each do |room| %>
            <%= render 'room', room: room %>
          <% end %>
        <% else %>
          <p class="text-center text-white opacity-75">No rooms available to reserve at the moment.</p>
        <% end %>
    </div>
   </div>
  </div>
</div>
